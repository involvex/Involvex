{
  "name": "involvex-portfolio",
  "description": "Terminal-style portfolio for Involvex - Interactive command-line interface showcasing projects, skills, and contact information",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "repository": "https://github.com/involvex/Involvex.git",
  "author": "Involvex",
  "license": "MIT",
  "homepage": "https://involvex.github.io/Involvex/",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p typecheck \"build-only {@}\" --",
    "preview": "vite preview",
    "prebuild": "npm run format && npm run lint && npm run typecheck",
    "build-only": "vite build",
    "typecheck": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@formwerk/core": "^0.14.4",
    "@formwerk/devtools": "^0.14.4",
    "react-perf-devtool": "^3.1.8",
    "sendmail": "^1.6.1",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.1.3",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^25.0.3",
    "@types/sendmail": "^1.4.7",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.36.0",
    "eslint-plugin-oxlint": "^1.35.0",
    "eslint-plugin-vue": "^10.6.2",
    "jiti": "^2.6.0",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.35.0",
    "prettier": "^3.7.4",
    "typescript": "~5.9.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-inspect": "^11.3.3",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.0.4"
  }
}
